<!doctype html>
<html>
<head>
  <base href="https://tordans-card-o-matic.herokuapp.com">
  <link href="/stylesheets/pivotal-cards.css" rel="stylesheet" type="text/css" media="all" />
</head>
<body>
  <% if @stories.blank? %>
    <h1>No stories found</h1>
  <% end %>

  <div id="pivotal-cards-pages" class="rubber-stamp double-sided">
    <% @stories.in_groups_of(4) do |page| %>
      <div class="page fronts">
      <% page.each_with_index do |story, i| %>
        <% next if story.nil? %>
        <div class="<%= story.story_type %> card" id="front-<%= i %>">
          <div class="front side">
            <div class="header">

              <span class="owner">
                <% if story.owned_by %>
                  <span class="writeline">
                    <% first_name, last_name = story.owned_by.to_s.split(/[\.\- ]/) %>
                    <%= first_name.to_s[0] + last_name.to_s[0..1] %>
                  </span>
                <% else %>
                  <span class="writeline empty"></span>
                <% end %>
              </span>

              <img src="/magnet.png" style="width: 120px; position: absolute; right: 140px;"/>

              <span class="story-id"><%= story.id %></span>

              <% if story.estimate %>
                <span class="points points<%= story.estimate %>">
                  <% if story.estimate > 0 %>
                    <span class="writeline"><%= story.estimate %></span>
                  <% else %>
                    <span class="writeline empty"></span>
                  <% end %>
                </span>
              <% end %>

            </div>

            <div class="middle">

              <div class="story-title">
                <div class="story-type">
                  <% if story.story_type == 'bug' %>
                    BUG
                  <% end %>
                </div>
                <%= Rack::Utils.escape_html(story.name) %>
              </div>

            </div>
          </div>
        </div>
      <% end %>
