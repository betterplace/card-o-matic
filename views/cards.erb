<!doctype html>
<html>
<head>
  <link href="/stylesheets/pivotal-cards.css" rel="stylesheet" type="text/css" media="all" />
</head>
<body>
  <div id="pivotal-cards-pages" class="rubber-stamp double-sided">
    <% @stories.in_groups_of(4) do |page| %>
      <div class="page fronts">
      <% page.each_with_index do |story, i| %>
        <% next if story.nil? %>
        <div class="<%= story.story_type %> card" id="front-<%= i %>">
          <div class="front side">
            <div class="middle">
              <div class="story-title"><%= Rack::Utils.escape_html(story.name) %></div>
              <div class="workflow">
                Rebrief w/ PM ❱
                Do ❱
                Check w/ PM ❱
                Finalize ❱
                Finish+Review (▢ Codingg. ▢ Guidel.html/css ▢ Guidel.i18n ▢ Softw.Test ▢ ManualTest) ❱
                PM Pull ❱ Update (▢ Check bp42)
              </div>
              <div class="story-type">
                <% if story.story_type == 'bug' %>
                  ☠
                <% elsif story.story_type == 'chore' %>
                  <%= story.story_type %>
                <% end %>
              </div>
            </div>
            <div class="footer">

              <span class="owner">
                <strong>♕</strong>
                <% if story.owned_by %>
                  <span class="writeline"><%= story.owned_by %></span>
                <% else %>
                  <span class="writeline empty"></span>
                <% end %>
              </span>

              <span class="labels">
                <span class="project-label"><%= @project.name %></span>
                <span class="status-label">
                  <%= story.current_state if ['started', 'finished'].include?(story.current_state) %>
                </span>
                <% if story.labels %>
                  <span class="tags">
                    <% story.labels.split(',').each do |label| %>
                      <span class="tag"><%= label %></span>
                    <% end %>
                   <span>
                <% end %>
              </span>

              <% if story.estimate %>
                <span class="points points<%= story.estimate %>">
                  <% if story.estimate > 0 %>
                    <span class="writeline"><%= story.estimate %></span>
                  <% else %>
                    <span class="writeline empty"></span>
                  <% end %>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      </div>

      <div class="page backs">
      <% page.each_with_index do |story, i| %>
        <% next if story.nil? %>
        <div class="<%= story.story_type %> card rubber-stamp double-sided" id="back-<%= i %>">
          <div class="back side">
            <div class="header">
              <span class="id"><%= story.id %></span>
              <span class="project"><%= @project.name %></span>
            </div>
            <div class="middle">
              <div class="story-title"><%= Rack::Utils.escape_html(story.name) %></div>
              <div class="testing-checklist">
                <strong>Tested:</strong>
                <br>
                <% if @project.name == 'mobile' %>
                  ▢ iOS Chrome
                  ▢ iOS Safari
                  ▢ Android Chrome
                  ▢ Android Native
                  ▢ …
                <% else %>
                  ▢ Chrome
                  ▢ Firefox
                  ▢ Safari<br>
                  ▢ IE 8
                  ▢ IE 9
                  ▢ IE 10
                <% end %>
              </div>
              <!--<div class="description"><%= Rack::Utils.escape_html(story.description) %></div>-->
            </div>
            <div class="footer">
              <% if story.requested_by %><span class="requester"><%= story.requested_by %></span><% end %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</body>
</html>
